<div class="position-relative">
    <h2 class="display-6">Log in</h2>
        <form class="position-absolute start-50 translate-middle-x" id="login-form">
            <div class="mb-3">
                <label for="LoginUser" class="form-label">Username</label>
                <input type="text" class="form-input" id="LoginUser" aria-describedby="userHelp">
                <div id="userlHelp" class="form-text">We'll never share your information with anyone else.</div>
            </div>
            <div class="mb-3">
                <label for="LoginPassword" class="form-label">Password</label>
                <input type="password" class="form-input" id="LoginPassword">
            </div>
            <div class="mb-3 form-check">
                <a class="registerHref">
                    Dont have an account?<span id="register"><a href="/signup">Register</a></span>
                </a>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

<script src="/js/login.js"></script>