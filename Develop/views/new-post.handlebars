<div class="newPostForm">
        <section class="position-absolute start-50 translate-middle-x">
            <h2> Create New Post </h2>
            <form class="card new-post-form'" style="width: 55rem;">
                <div class="row px-3 form-item">
                    <h6 class="mb-0 text-sm">Title</h6>
                    <input name="post-title" placeholder="Enter Post Title" id="title-info">
                </div>
                <div class="row px-3 form-item">
                    <h6 class="mb-0 text-sm">Content</h6>
                    <textarea class="form-control" name="post-body" id="content-info" rows="10"></textarea>
                </div>
                <div class="row mb-3 px-3">
                    <button type="button" class="btn btn-warning" id="newFormBtn">Create</button>
                </div>
            </form>
        </section>
    </div>
    <script src="/js/news.js"></script>